{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome: Launch React App",
      "type": "pwa-chrome",
      "request": "launch",
   "url": "http://127.0.0.1:5173/",
      "webRoot": "${workspaceFolder}/src"
    }
,
  {
    "name": "Backend: Launch (ts-node)",
    "type": "node",
    "request": "launch",
    "cwd": "${workspaceFolder}/backend",
    "runtimeExecutable": "node",
    "runtimeArgs": [
      "--inspect=9229",
      "-r",
      "ts-node/register"
    ],
    "args": [
      "${workspaceFolder}/backend/src/server.ts"
    ],
    "envFile": "${workspaceFolder}/backend/.env",
    "skipFiles": [
      "<node_internals>/**"
    ],
    "console": "integratedTerminal",
    "outFiles": [
      "${workspaceFolder}/backend/dist/**/*.js"
    ],
    "sourceMaps": true
  },
  {
    "name": "Backend: Launch (nodemon + ts-node)",
    "type": "node",
    "request": "launch",
    "cwd": "${workspaceFolder}/backend",
    "runtimeExecutable": "nodemon",
    "runtimeArgs": [
      "--inspect=9229",
      "--watch",
      "src",
      "--ext",
      "ts,js,json",
      "--exec",
      "node -r ts-node/register ./src/server.ts"
    ],
    "envFile": "${workspaceFolder}/backend/.env",
    "restart": true,
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen",
    "skipFiles": [
      "<node_internals>/**"
    ],
    "outFiles": [
      "${workspaceFolder}/backend/dist/**/*.js"
    ],
    "sourceMaps": true
  },
  {
    "name": "Backend: Attach (9229)",
    "type": "node",
    "request": "attach",
    "port": 9229,
    "address": "localhost",
    "restart": true,
    "cwd": "${workspaceFolder}/backend",
    "sourceMaps": true,
    "outFiles": [
      "${workspaceFolder}/backend/dist/**/*.js"
    ],
    "skipFiles": [
      "<node_internals>/**"
    ]
  }
  ]
}